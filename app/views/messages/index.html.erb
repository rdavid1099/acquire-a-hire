<% @messages.each do |message| %>
  <div class="message">
    <%= message.sender.display_name %>:
    <h3><%= message.subject %></h3>
    <p><%= message.body %></p>
    <p><%= display_attachments(message) %></p>
  </div>
<% end %>
<%= button_to 'Reply', new_message_path, method: :get, params: { job_id: @job_id } %>
<% if current_user.requester? %>
  <%= button_to 'Accept Offer', requesters_accept_offer_path(@job_id.to_i), method: :put, params: {professional: @with_id} %>
  <%= button_to 'Reject Offer', requesters_reject_offer_path(@job_id.to_i), method: :delete %>
<% end %>
