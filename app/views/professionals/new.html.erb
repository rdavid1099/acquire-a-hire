<%= form_for(@user, url: professionals_path) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :business_name %>
  <%= f.text_field :business_name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>

  <% @skills.each do |skill| %>
    <%= check_box_tag(:skill_ids, skill.id, @user.skills.include?(skill), name: 'user[skill_ids][]', id: "skill-#{skill.id}") %>
    <%= skill.name %>
  <% end %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>

  <%= f.submit "Create Account" %>
<% end %>
