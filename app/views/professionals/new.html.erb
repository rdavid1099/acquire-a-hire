<div class="container">
  <h1>Create a New Professional Account</h1>
  <div class="jumbotron">
    <%= form_for(@user, url: professionals_path, :html => {:class => "form-horizontal center"} ) do |f| %>
    <div class="form-group">
      <%= f.label :first_name, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :business_name, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :business_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :phone, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :street_address, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :street_address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :state, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= render partial: "shared/state_dropdown" %><br />
      </div>
    </div>
    <div class="form-group">
      <%= f.label :zipcode, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :zipcode, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :Skills, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <% @skills.each do |skill| %>
        <div class="checkbox">
          <%= check_box_tag(:skill_ids, skill.id, @user.skills.include?(skill), name: 'user[skill_ids][]', id: "skill-#{skill.id}", type: "checkbox" ) %>
          <%= skill.name %>
        </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>


    <%= f.submit "Create Account", class: "btn btn-primary center-block" %>
    <% end %>
  </div>
</div>
