<div  class="container">
  <div class="well">
    <h1>Welcome, <%= @user.first_name %> <%= @user.last_name %> of <%= @user.business_name %></h1>

    <table class="table">
      <tr>
        <td>
          Member Since:
        </td>
        <td>
          <%= @user.created_at.to_s(:long) %>
        </td>
      </tr>
      <tr>
        <td>
          Average Rating:
        </td>
        <td>
          <%= render partial: 'shared/average_rating', locals: {user: @user} %>
        </td>
      </tr>
      <tr>
       <td>
         Business Address:
       </td>
       <td>
         <%= render partial: "shared/address", locals: {user: @user} %>
       </td>
     </tr>
     <tr>
       <td>
        Skills Offered:
       </td>
       <td>
         <ul>
           <% @user.skills.each do |skill| %>
             <li><%= skill.name %></li>
           <% end %>
         </ul>
       </td>
     </tr>
    </table>

    <%= link_to 'Edit Account', edit_professional_path(@user), class:'btn btn-acquire' %>
    
    <div class="row">
      <div class="col-md-6"><h3>In-Progress Jobs</h3></div>
    </div>
    <div class="row">
      <div class="col-md-6"><h3><% @user.in_progress_jobs.each do |job| %>
        <ul>
          <li><%= link_to "#{job.id} - #{job.title}", job_path(job) %></li>
        </ul>
      <% end %></h3>
    </div>
    </div>
  </div>
</div>
