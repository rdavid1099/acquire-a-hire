<p>Fill out all required fields and enter your password to get your API key</p>

<%= form_tag api_accounts_path %>
  <%= label_tag 'app_name', "Application's Name" %>
  <%= text_field_tag 'app_name' %><br>
  <%= label_tag 'first_name', 'First Name' %>
  <%= text_field_tag 'first_name', @user.first_name %><br>
  <%= label_tag 'last_name', 'Last Name' %>
  <%= text_field_tag 'last_name', @user.last_name %><br>
  <%= label_tag 'email', 'Email Address' %>
  <%= text_field_tag 'email', @user.email %><br>
  <%= label_tag 'url', "Application's URL" %>
  <%= text_field_tag 'url' %><br>
  <%= label_tag 'redirect_url', "Redirect URL" %>
  <%= text_field_tag 'redirect_url' %><br>
  <%= label_tag 'password', 'Password' %>
  <%= password_field_tag 'password' %><br>
  <%= label_tag 'description', 'Description of API Use (Optional)' %><br>
  <%= text_area_tag 'description' %><br>
  <%= submit_tag 'Send Request' %>
