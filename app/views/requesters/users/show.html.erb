<h1><%= @user.full_name %></h1>

<p>
  <%= render partial: "shared/address", locals: {user: @user} %>
</p>
<h3>Your Posted Jobs</h3>
<div class="jobs">
  <div id="open">
    <% @user.open_jobs.each do |job| %>
      <ul>
        <li><%= link_to "#{job.id} - #{job.title}", job_path(job) %></li>
      </ul>
    <% end %>
  </div>

  <div id="in_progress">
    <% @user.in_progress_jobs.each do |job| %>
      <ul>
        <li><%= link_to "#{job.id} - #{job.title}", job_path(job) %></li>
      </ul>
    <% end %>
  </div>
</div>
